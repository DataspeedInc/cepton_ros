<launch>
    <arg name="namespace" default="cepton" doc="prefix for names"/>
    <arg name="rviz_config_path" doc="rviz config file path"/>
    <arg name="transforms_path"  doc="transforms file path"/>

    <!-- Launch driver -->
    <include file="$(find cepton_ros)/launch/driver_multi.launch">
        <arg name="transforms_path" value="$(arg transforms_path)"/>
    </include>

    <!-- Launch transforms -->
    <include file="$(find cepton_ros)/launch/transforms.launch">
        <arg name="transforms_path" value="$(arg transforms_path)"/>
    </include>

    <!-- launch rviz -->
    <arg name="rviz_node_name" value="$(arg namespace)_rviz"/>
    <node pkg="rviz" type="rviz" name="$(arg rviz_node_name)" required="true" args="-d $(arg rviz_config_path)"/>
</launch>
