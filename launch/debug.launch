<!-- Launches SDK driver and rviz. -->
<launch>
  <arg name="capture_path" default=""/>
  <arg name="launch_prefix" default="gdb -ex run --args"/>

  <include file="$(find cepton_ros)/launch/manager.launch"/>

  <node launch-prefix="$(arg launch_prefix)" pkg="nodelet" type="nodelet" name="cepton_driver" args="load cepton_ros/DriverNodelet cepton_manager" output="screen">
    <param name="capture_path" value="$(arg capture_path)"/>
  </node>
</launch>
